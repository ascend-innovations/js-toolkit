{
    "name": "@ascend-innovations/eslint-config",
    "version": "1.1.0",
    "description": "Ascend's base vanilla JS ESLint config",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ascend-innovations/js-toolkit"
    },
    "author": "Ascend Innovations (https://ascend-innovations.com)",
    "contributors": [
        {
            "name": "Chris Hahn",
            "url": "https://github.com/codingwithchris"
        }
    ],
    "bugs": {
        "url": "https://github.com/ascend-innovations/js-toolkit/issues"
    },
    "homepage": "https://github.com/ascend-innovations/js-toolkit",
    "main": "./index.js",
    "scripts": {
        "lint": "eslint . --ext .js,.jsx,.svelte",
        "lint:fix": "yarn lint --fix",
        "test:js": "eslint __tests__/javascript.js",
        "test:js:react": "eslint __tests__/react.jsx --config ./react.js",
        "test:js:svelte": "eslint __tests__/svelte.svelte --config ./svelte.js",
        "test": "yarn test:js && yarn test:js:react && yarn test:js:svelte"
    },
    "devDependencies": {
        "@babel/core": "^7.16.10",
        "@babel/eslint-parser": "^7.16.5",
        "@babel/eslint-plugin": "^7.16.5",
        "@babel/preset-react": "^7.16.7",
        "eslint": "^8.7.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^25.7.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-svelte3": "^3.4.0",
        "svelte": "^3.46.2"
    },
    "peerDependencies": {
        "@babel/core": "^7.16.10",
        "@babel/eslint-parser": "^7.16.5",
        "@babel/eslint-plugin": "^7.16.5",
        "eslint": "^8.7.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^25.7.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-svelte3": "^3.4.0",
        "prettier": "^2.4.1"
    },
    "peerDependenciesMeta": {
        "eslint-config-airbnb": {
            "optional": true
        },
        "eslint-plugin-jsx-a11y": {
            "optional": true
        },
        "eslint-plugin-react": {
            "optional": true
        },
        "eslint-plugin-react-hooks": {
            "optional": true
        },
        "eslint-plugin-jest": {
            "optional": true
        },
        "eslint-plugin-svelte3": {
            "optional": true
        }
    },
    "volta": {
       "extends": "../../package.json"
    }
}
